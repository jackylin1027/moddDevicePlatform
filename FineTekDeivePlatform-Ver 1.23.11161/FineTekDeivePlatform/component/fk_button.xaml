<UserControl x:Class="FineTekDeivePlatform.component.fk_button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FineTekDeivePlatform.component"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Button x:Name="nameButton" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="10"  ToolTip="This is fk Button" Height="Auto" materialDesign:ShadowAssist.ShadowDepth="Depth3" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF626EE8" Offset="0.146"/>
                    <GradientStop Color="#FF1C13DE" Offset="0.862"/>
                    <GradientStop Color="#FF150EB6" Offset="0.449"/>
                </LinearGradientBrush>
            </Button.Background>
            <TextBlock x:Name="nameText" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:fk_button}}, Path=fk_button_text}"  FontSize="14" FontWeight="Bold"  />
        </Button>
    </Grid>
</UserControl>

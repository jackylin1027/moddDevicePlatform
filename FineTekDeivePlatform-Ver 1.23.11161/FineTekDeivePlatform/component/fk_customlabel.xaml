<UserControl x:Class="FineTekDeivePlatform.component.fk_customlabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FineTekDeivePlatform.component"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <materialDesign:ColorZone  Mode="Standard" CornerRadius="10"   materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                   Margin="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type local:fk_combobox}}, Path=fk_combobox_margin}" VerticalAlignment="Stretch" Background="{x:Null}">
            <TextBlock x:Name="nameLabel" Style="{StaticResource MaterialDesignTitleTextBlock}" FontSize="14" FontWeight="Bold" 
                   Text="111"
                   Margin="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type local:fk_customlabel}}, Path=fk_text_margin}" TextAlignment="Right" TextDecorations="{x:Null}"/>
        </materialDesign:ColorZone>

    </Grid>
</UserControl>
